<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pag3_fondo_home"
    tools:context=".PagC_Home_Activity">

    <!-- Guideline arriba/TOP -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_arriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <!-- Guideline que envuelve el perfil de usuario -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_perfil_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <!-- Guideline vertical izquierdo, para dejar margenes -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_izquierdo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <!-- Guideline vertical derecha, para dejar margenes -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_vertical_derecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedor_perfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/pag_home_marco_perfil_usuario"
        app:layout_constraintBottom_toTopOf="@+id/guideline_perfil_usuario"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_derecha"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toTopOf="@+id/guideline_top_arriba">

        <ImageView
            android:id="@+id/imagenPerfilUsuario"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:contentDescription="@string/nombre_perfil_usuario"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pag3_foto_perfil" />

        <TextView
            android:id="@+id/nombre_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/nombre_perfil_usuario"
            android:textColor="@color/color_letra_nombre_usuario_pag3_home"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imagenPerfilUsuario"
            app:layout_constraintStart_toEndOf="@+id/imagenPerfilUsuario"
            app:layout_constraintTop_toTopOf="@+id/imagenPerfilUsuario" />



        <ImageView
            android:id="@+id/icono_moneda"
            android:contentDescription="@string/icono_moneda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/moneda"
            app:layout_constraintBottom_toBottomOf="@+id/numeroDeMonedas"
            app:layout_constraintEnd_toStartOf="@+id/numeroDeMonedas"
            app:layout_constraintTop_toTopOf="@+id/numeroDeMonedas" />

        <TextView
            android:id="@+id/numeroDeMonedas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/Numero_De_Monedas"
            android:textColor="#FFD700"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_mas"
            app:layout_constraintEnd_toStartOf="@+id/btn_mas"
            app:layout_constraintTop_toTopOf="@+id/btn_mas" />

        <ImageView
            android:id="@+id/btn_mas"
            android:contentDescription="@string/plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pag3_mas_plus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17783858" />


    <!-- CONTENEDOR DE BÚSQUEDA  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pag_home_marco_perfil_usuario"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_derecha"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toBottomOf="@+id/contenedor_perfil">

        <!-- Icono de Lupa -->
        <ImageView
            android:id="@+id/icon_lupa"
            android:contentDescription="@string/icono_lupa"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_search"
            app:tint="#8A7B65" />

        <!-- EditText para escribir -->
        <EditText
            android:id="@+id/editTextBuscador"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Search"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/Color_letras_home"
            android:textColorHint="#8A7B65"
            android:textSize="18sp"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/icono_lado_buscador"
            app:layout_constraintStart_toEndOf="@+id/icon_lupa" />

        <!-- Icono al lado de buscar (Filtro/Escudo de la derecha) -->
        <ImageView
            android:id="@+id/icono_lado_buscador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pag3_icono_right_search"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35841313" />

    <ImageView
        android:id="@+id/imagen_oferta_especial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/descripcion_oferta_hombre"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_derecha"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toBottomOf="@+id/containerSearch"
        app:srcCompat="@drawable/fotohombre" />


    <!-- Guía horizontal que marca el final de la sección de categorías (Icono + Texto) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_final_categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50342" />

    <!-- Contenedor para distribuir los 4 elementos -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedor_categorias_iconos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guia_final_categorias"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_derecha"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toBottomOf="@+id/guideline5">

        <!-- Icono de weapons -->
        <LinearLayout
            android:id="@+id/columna_armas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/columna_armaduras"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/pag3_icono_hacha"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:contentDescription="Icono de armas"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pag3_icono_hacha" />

            <TextView
                android:id="@+id/txt_armas"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Weapons"
                android:textColor="@color/Color_letras_home"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- layaour de la columna armaduras -->
        <LinearLayout
            android:id="@+id/columna_armaduras"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/columna_ropa"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/columna_armas">

            <ImageView
                android:id="@+id/pag3_icono_casco"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:contentDescription="Icono de armaduras"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pag3_icono_casco_armadura" />

            <TextView
                android:id="@+id/txt_armaduras"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Armor"
                android:textColor="@color/Color_letras_home"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- layaour de la columna de ropa-->
        <LinearLayout
            android:id="@+id/columna_ropa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/columna_herramientas"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/columna_armaduras">

            <ImageView
                android:id="@+id/pag3_icono_ropa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:contentDescription="Icono de ropa"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pag3_icono_ropa" />

            <TextView
                android:id="@+id/txt_ropa"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Clothing"
                android:textColor="@color/Color_letras_home"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- layaour de la columna de herramientas-->
        <LinearLayout
            android:id="@+id/columna_herramientas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/columna_ropa">

            <ImageView
                android:id="@+id/pag3_icono_herramientas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:contentDescription="Icono de artefactos"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pag3_icono_herramientas" />

            <TextView
                android:id="@+id/txt_herramientas"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Artifacts"
                android:textColor="@color/Color_letras_home"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_derecha"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toTopOf="@+id/guia_final_categorias">


        <ImageView
            android:id="@+id/foto_recommend"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/pag3_recommend" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_contenedor_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />


    <!-- layaout/Contenedor para Espada, Armadura...) -->
    <LinearLayout
        android:id="@+id/lay_contenedor_compra"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintBottom_toTopOf="@+id/guideline_contenedor_compra"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_derecha"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toTopOf="@+id/guideline6">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/producto_espada"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/pag3_icono_compras">

            <ImageView
                android:id="@+id/img_espada"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pag3_icono_espada" />

            <TextView
                android:id="@+id/txt_nombre_espada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viking Sword"
                android:textColor="@color/Color_letras_home"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_espada" />

            <LinearLayout
                android:id="@+id/contenedor_precio_espada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nombre_espada">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/moneda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200 G"
                    android:textColor="@color/color_valor_moneda"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_comprar_espada"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contenedor_precio_espada"
                app:srcCompat="@drawable/pag3_icono_btn_buy"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- PRODUCTO 2-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/producto_armadura_cuero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/pag3_icono_compras">

            <ImageView
                android:id="@+id/img_armadura"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pag3_icono_casco_armadura" />

            <TextView
                android:id="@+id/txt_nombre_armadura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leather Armor"
                android:textColor="@color/Color_letras_home"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_armadura" />

            <LinearLayout
                android:id="@+id/contenedor_precio_armadura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nombre_armadura">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/moneda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="900 G"
                    android:textColor="#FFD700"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_comprar_armadura"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contenedor_precio_armadura"
                app:srcCompat="@drawable/pag3_icono_btn_buy"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- PRODUCTO 3-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/producto_cuerno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/pag3_icono_compras">

            <ImageView
                android:id="@+id/img_cuerno"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pag3_icono_herramientas" />

            <TextView
                android:id="@+id/txt_nombre_cuerno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drinking Horn"
                android:textColor="@color/Color_letras_home"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_cuerno" />

            <LinearLayout
                android:id="@+id/contenedor_precio_cuerno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_nombre_cuerno">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/moneda" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 G"
                    android:textColor="#FFD700"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_comprar_cuerno"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contenedor_precio_cuerno"
                app:srcCompat="@drawable/pag3_icono_btn_buy"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_btnes_inferior_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96032834" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_btnes_inferior_home"
        app:layout_constraintEnd_toStartOf="@+id/guide_vertical_derecha"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toTopOf="@+id/guideline_contenedor_compra">



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
