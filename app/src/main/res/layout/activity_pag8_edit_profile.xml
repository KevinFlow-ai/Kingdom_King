<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagH_Edit_Profile_Activity"
    android:background="@drawable/pag8_fondo_1">

    <!-- 7. ADAPTABILIDAD: Uso de guías porcentuales para diseño responsivo -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_superior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_header_limite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_izquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_derecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_inferior_barra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <!-- CABECERA: Título, Botón Volver y Saldo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/seccion_cabecera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guia_header_limite"
        app:layout_constraintEnd_toStartOf="@+id/guia_derecha"
        app:layout_constraintStart_toStartOf="@+id/guia_izquierda"
        app:layout_constraintTop_toTopOf="@+id/guia_superior">

        <ImageView
            android:id="@+id/btn_volver"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fleecha" />

        <TextView
            android:id="@+id/txt_titulo_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/color_letras_pag5"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/contenedor_monedas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/moneda" />

            <TextView
                android:id="@+id/txt_saldo_oro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="950 G"
                android:textColor="#D4AF37"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CONTENIDO: Formulario con Scroll para evitar desbordamiento en pantallas pequeñas -->
    <ScrollView
        android:id="@+id/scroll_formulario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/guia_inferior_barra"
        app:layout_constraintEnd_toStartOf="@+id/guia_derecha"
        app:layout_constraintStart_toStartOf="@+id/guia_izquierda"
        app:layout_constraintTop_toBottomOf="@+id/seccion_cabecera">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- PERFIL: Avatar y Nombre -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bloque_perfil_superior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/img_foto_perfil"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/pag7_foto_perfil" />

                <TextView
                    android:id="@+id/txt_nombre_jarl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Jarl Erik"
                    android:textColor="@color/color_letras_pag5"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/img_foto_perfil"
                    app:layout_constraintTop_toTopOf="@+id/img_foto_perfil" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_cambiar_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/pag8_change_avatar"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintStart_toStartOf="@+id/txt_nombre_jarl"
                    app:layout_constraintTop_toBottomOf="@+id/txt_nombre_jarl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change avatar"
                        android:textColor="@color/color_letras_pag5"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CAMPOS DE TEXTO: Full Name -->
            <TextView
                android:id="@+id/eti_nombre_completo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Full Name"
                android:textColor="@color/color_letras_pag5"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_nombre_completo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pag8_marco"
                android:paddingStart="16dp"
                android:text="Jarl Erik"
                android:textColor="@color/color_letras_pag5"
                android:layout_marginBottom="16dp" />

            <!-- Email -->
            <TextView
                android:id="@+id/eti_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="@color/color_letras_pag5"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/et_email_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pag8_marco"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:text="erik@example.com"
                android:textColor="@color/color_letras_pag5"
                android:layout_marginBottom="16dp" />

            <!-- Phone Number -->
            <TextView
                android:id="@+id/eti_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/color_letras_pag5"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contenedor_selector_telefono"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/pag8_marco"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txt_num_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+46 701234567"
                    android:textColor="@color/color_letras_pag5"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/pag8_icono_ipone" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Ubicación -->
            <LinearLayout
                android:id="@+id/contenedor_ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pag8_ubicacion" />

                <TextView
                    android:id="@+id/txt_ubicacion_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Upsala, Sweden"
                    android:textColor="@color/color_letras_pag5"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Botón Mis Pedidos -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_mis_pedidos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/pag8_marco_order"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/ic_pedido_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/pag7_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="My Orders"
                    android:textColor="@color/color_letras_pag5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ic_pedido_btn"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/pag7_siguiente" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <!-- BARRA NAVEGACIÓN INFERIOR: Con iconos unificados según solicitud -->
    <!-- BARRA DE NAVEGACIÓN INFERIOR: Diseño adaptable con pesos y sin medidas absolutas -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barra_navegacion_inferior"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guia_derecha"
        app:layout_constraintStart_toStartOf="@+id/guia_izquierda"
        app:layout_constraintTop_toTopOf="@+id/guia_inferior_barra">

        <!-- Botón 1: Inicio -->
        <ImageView
            android:id="@+id/btn_nav_inicio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_nav_cartera"
            app:srcCompat="@drawable/pag3_btn_inferior_home" />

        <!-- Botón 2: Cartera/Tienda -->
        <ImageView
            android:id="@+id/btn_nav_cartera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btn_nav_inicio"
            app:layout_constraintEnd_toStartOf="@+id/btn_nav_central"
            app:srcCompat="@drawable/pag3_btn_inferior_cartera" />

        <!-- Botón 3: Central (Escudo) - Más grande y centrado -->

        <!-- Botón 4: Objetos/Mapa -->

        <ImageView
            android:id="@+id/btn_nav_central"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/btn_nav_objetos"
            app:layout_constraintHorizontal_weight="1.3"
            app:layout_constraintStart_toEndOf="@+id/btn_nav_cartera"
            app:srcCompat="@drawable/pag3_btn_inferior_principal"
            tools:layout_editor_absoluteY="4dp" />

        <ImageView
            android:id="@+id/btn_nav_objetos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btn_nav_central"
            app:layout_constraintEnd_toStartOf="@+id/btn_nav_perfil"
            app:srcCompat="@drawable/pag3_btn_inferior_obj" />

        <!-- Botón 5: Perfil (Foto circular) -->
        <ImageView
            android:id="@+id/btn_nav_perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btn_nav_objetos"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/pag8_perfil_foto_abajo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>