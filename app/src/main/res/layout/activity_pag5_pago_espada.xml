<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagE_Pago_Espada_Activity"
    android:background="@drawable/pago_espadaa_1">

    <!-- Guideline arriba/TOP -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_arriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <!-- Guideline que envuelve el perfil de usuario -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_header_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <!-- Guideline vertical izquierdo, para dejar margenes -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_izquierdo"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05" />

    <!-- Guideline vertical derecha, para dejar margenes -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_vertical_der"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_cabecera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_header_checkout"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical_der"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toTopOf="@+id/guideline_top_arriba">

        <!-- Flecha atras
    android:foreground="?attr/selectableItemBackgroundBorderless"
    se utiliza para añadir un efecto visual de retroalimentación táctil
     (ripple o "onda")

     android:clickable="true". Indica que el elemento puede recibir eventos de clic.
     Una imagen para que funcione como un boton, esta opción para que el sistema
     detecte cuando el usuario lo toca y pueda ejecutar una acción
      (como abrir otra pantalla).

      android:focusable="true". Indica que el elemento puede ganar el foco del sistema.
      Permite que el elemento sea seleccionado usando métodos de entrada que no son la pantalla táctil, como un teclado físico o
      por voz para los ciegos

     -->
        <ImageView
            android:id="@+id/flecha_atras"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:contentDescription="@string/flecha_atras"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fleecha"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/txt_titulo_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkout"
            android:textColor="@color/color_letras_pag5"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/contenedor_monedas"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.6">

            <ImageView
                android:id="@+id/img_moneda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/moneda" />

            <TextView
                android:id="@+id/cantidad_monedas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="1,250 G"
                android:textColor="@color/numeros_monedas_pag5"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/guideline_contenedor_compra"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical_der"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toTopOf="@+id/guideline_header_checkout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Contenedor del producto (Espada) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contenedor_producto_espada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/marco_espada"
                android:padding="12dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Imagen de la Espada -->
                <ImageView
                    android:id="@+id/img_espada_vikinga"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/pag5_icono_espada" />

                <!-- Nombre del producto -->
                <TextView
                    android:id="@+id/txt_nombre_espada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Viking Sword ×1"
                    android:textColor="@color/color_letras_pag5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/txt_precio_espada"
                    app:layout_constraintStart_toEndOf="@+id/img_espada_vikinga"
                    app:layout_constraintTop_toTopOf="@+id/img_espada_vikinga" />

                <!-- Precio del producto -->
                <TextView
                    android:id="@+id/txt_precio_espada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,200 G"
                    android:textColor="#E0C9A6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_nombre_espada" />

                <!-- Total acumulado debajo del precio -->
                <TextView
                    android:id="@+id/txt_subtotal_acumulado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="1,250 G"
                    android:textColor="#E0C9A6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_precio_espada" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            

            <!-- Espacio para el resto de elementos (Resumen, Información Pago, etc.) -->
            <!-- Aquí puedes ir añadiendo los siguientes bloques siguiendo este estilo -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_contenedor_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/marco_btn_inferior_cleanup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guia_vertical_der"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_izquierdo"
        app:layout_constraintTop_toTopOf="@+id/guideline_contenedor_compra">


        <ImageView
            android:id="@+id/boton_inferior_inicio"
            android:layout_width="73dp"
            android:layout_height="74dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boton_inferior_cartera"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/pag3_btn_inferior_home"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/boton_inferior_cartera"
            android:layout_width="73dp"
            android:layout_height="74dp"
            android:clickable="true"
            android:contentDescription="Ver cartera"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boton_inferior_central_principal"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/boton_inferior_inicio"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/pag3_btn_inferior_cartera"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/boton_inferior_central_principal"
            android:layout_width="73dp"
            android:layout_height="74dp"
            android:clickable="true"
            android:contentDescription="Botón principal"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boton_inferior_notificaciones"
            app:layout_constraintHorizontal_weight="1.3"
            app:layout_constraintStart_toEndOf="@+id/boton_inferior_cartera"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pag3_btn_inferior_principal"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/boton_inferior_notificaciones"
            android:layout_width="73dp"
            android:layout_height="74dp"
            android:clickable="true"
            android:contentDescription="Ver avisos"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boton_inferior_objetos"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/boton_inferior_central_principal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/pag3_btn_inferior_obj"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/boton_inferior_objetos"
            android:layout_width="73dp"
            android:layout_height="74dp"
            android:clickable="true"
            android:contentDescription="Ver equipamiento"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/boton_inferior_notificaciones"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/pag3_btn_inferior_noti"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>